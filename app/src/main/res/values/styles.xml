<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="RoundedCorners">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>
    <style name="BlackTextWhiteBackgroundButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="backgroundTint">@android:color/black</item>
    </style>

    <style name="WhiteTextBlackBorderButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@android:color/white</item>
        <item name="strokeColor">@android:color/black</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

</resources>